pipeline {
    agent any

    stages {
        stage('Clone') {
            steps {
                git branch: 'main', url: 'https://github.com/adaleShri/cicd-project.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Docker Build & Run') {
            steps {
                sh '''
                docker rm -f clinicapp || true
                docker build -t clinic-app:v1 .
                docker run -d -p 8081:8080 --name clinicapp clinic-app:v1
                '''
            }
        }
    }
}

